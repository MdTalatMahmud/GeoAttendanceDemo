<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SupervisorActivity">


    <Button
        android:id="@+id/TodaysWorkerBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Workers">

    </Button>

    <Button
        android:id="@+id/SeeAllEmployeesBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See All Employees">

    </Button>

    <Button
        android:id="@+id/MakeNewDayRosterBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make New Day Roster">

    </Button>

    <Button
        android:id="@+id/SeeFullMonthRosterActivityBtnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See Full Month Activity">

    </Button>

</LinearLayout>